<div class="col-md-12">
  <%= simple_nested_form_for [:admin, @gist], :html => {:class => 'form-horizontal'} do |f| %>
    <%= f.input :title %>
    <%= f.input :alias %>
    <%= f.input :tag_list %>
    <%= f.input :summary, as: 'text' %>
    <%= f.simple_fields_for :snippets do |s| %>
      <div class="inner-form">
        <div class="inner-one-line">
          <%= s.input :filename %>
          <%= s.input :language %>
        </div>
        <%= s.input :code, as: 'text', input_html: { rows: 6} %>
        <div class="snippet-remove"><%= s.link_to_remove "删除代码片段" %></div>
      </div>
    <% end %>
    <div class="snippet-create"><%= f.link_to_add "添加代码片段", :snippets %></div>
    <%= f.submit %>
  <% end %>
</div>
