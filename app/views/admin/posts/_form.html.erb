<div class="col-md-12">
  <%= simple_form_for [:admin, @post], :html => {:class => 'form-horizontal'} do |f| %>
    <%= f.input :title %>
    <%= f.input :alias %>
    <%= f.input :summary, as: :text %>
    <%= f.input :category_id, collection: Category.all, include_blank: false %>
    <%= f.input :tag_list %>
    <%= f.input :content, as: :text, input_html: { rows: 15} %>
    <%= f.submit %>
  <% end %>
</div>
