<%= link_to '添加', new_admin_wallpaper_path %>
<table class="table table-hover">
  <thead>
    <tr>
      <td>序列</td>
      <td>名称</td>
      <td>代码</td>
      <td>操作</td>
    </tr>
  </thead>
  <tbody>
    <% @wallpapers.each_with_index do |wallpaper, i| %>
      <tr>
        <td><%= i+1  %></td>
        <td><%= wallpaper.name %></td>
        <td><%= wallpaper.author %></td>
        <td><%= link_to '更新', edit_admin_wallpaper_path(wallpaper) %> <%= link_to '删除', admin_wallpaper_path(wallpaper), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @wallpapers %>
