<div class="head-margin"></div>
<div class="container">
<div class="row">
  <article>
    <header>
      <h1 class="title"><%= @gist.title %></h1>
      <div class="article-info">
        <ul>
          <li>
            <span class="glyphicon glyphicon-tags"></span>
            <% @gist.tags.each do |tag| %>
              <%= link_to tag,posts_path %>
            <% end %>
          </li>
          <li><span class="glyphicon glyphicon-user"></span><%= @gist.user.name %></li>
          <li><span class="glyphicon glyphicon-time"></span><%= @gist.created_at.strftime('%Y-%m-%d') %></li>
        </ul>
      </div>
    </header>
    <div class="article-content">
      <div><%= raw markdown(@gist.summary) %></div>
      <% @gist.snippets.each do |snippet| %>
        <div class="filename">
          <span class="glyphicon glyphicon-link"></span><a href="#<%= snippet.filename %>" name="<%= snippet.filename %>"><%= snippet.filename %></a>
          <p><%= link_to 'raw', raw_snippet_path(snippet) %></p>
        </div>
        <%= raw coderay(snippet) %>
      <% end %>
    </div>
  </article>
</div>
<%= render 'layouts/disqus' %>
</div>
